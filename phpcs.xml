<?xml version="1.0"?>
<ruleset name="AXP Coding Standard">

    <description>AXP Coding Standard</description>

    <file>./openapi-client</file>
    <file>./scripts</file>
    <file>./src</file>
    <file>./tests</file>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>./openapi-generator-workspace/*</exclude-pattern>

    <arg name="parallel" value="10"/>
    <arg name="warning-severity" value="0"/>

    <rule ref="PSR12"/>>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>*/tests/*</exclude-pattern>
        <exclude-pattern>*/Test/*</exclude-pattern>
    </rule>

</ruleset>